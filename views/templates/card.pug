div(class="bg-white shadow rounded-xl")
    img(class="object-cover h-72 w-full rounded-xl"  src=`/uploads/${propiedad.imagen}` alt=`imagen de la propiedad ${propiedad.titulo}`)
    div(class="p-5 space-y-5")
        h1(class="text-2xl text-left my-10 font-extrabold text-golden")= propiedad.titulo
        p(class="text-sm text-gray-600 font-bold") Habitaciones:  
                                span(class="text-gray-800 font-bold")= propiedad.habitaciones
        p(class="text-sm text-gray-600 font-bold" ) WC:  
                                span(class="text-gray-800 font-bold")= propiedad.wc
        p(class="text-sm text-gray-600 font-bold") Precio:  
                                span(class="text-gray-800 font-bold")= propiedad.precio.nombre
        if propiedad.usuario && propiedad.usuario.alias && propiedad.usuario.foto
            h3(class="text-2xl text-center my-10 font-extrabold text-golden") Vendedor
            div(class="flex items-center justify-center")
                img(class="w-10 h-10 rounden-lx" src=`/uploads/${propiedad.usuario.foto}` alt="Avatar del vendedor")
                p(class="text-sm text-gray-800 font-bold ml-3")= propiedad.usuario.alias
        a(href=`/propiedad/${propiedad.id}` class="bg-peri w-full text-center block font-bold text-white p-2 uppercase rounded") Ver Propiedad          
